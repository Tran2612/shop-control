<!DOCTYPE html>

<body>
    <div class=" m-4">
        <h1 class="text-center mb-4">Quản lý Khách hàng</h1>

        <!-- Thanh tìm kiếm và nút Thêm nhân viên -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <!-- Thanh tìm kiếm -->

    <input type="text" id="searchInput" class="form-control w-50" placeholder="Tìm kiếm khách hàng...">


        <!-- Button thêm nhân viên -->
        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">Thêm khách hàng
            </button>
        </div>
</div>

        <!-- Bảng danh sách nhân viên -->
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>STT</th>
                    <th>Họ và Tên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Số lần mua hàng</th>
                    <th>Giảm giá</th>
                    <th>Tổng tiền</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody id="employeeTable">
                <% customers.forEach((customer, index)=> { %> <!-- Sử dụng index để hiển thị STT tự động tăng -->
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td> <!-- Hiển thị STT tự động tăng -->
                        <td>
                            <%= customer.name %>
                        </td>
                        <td>
                            <%= customer.email %>
                        </td>
                        <td>
                            <%= customer.phone %>
                        </td>
                        <td>
                            <%= customer.purchase ? customer.purchase : 1 %>
                        </td>
                        <td>
                            <%= customer.distount ? customer.distount : 0 %>%
                        </td>
                        <td>
                            <%= (customer.total ? customer.total : 0).toLocaleString() %>đ
                        </td>

                        <td class="d-flex justify-content-around gap-1 h-100">
                            <!-- Thêm nút để xem, sửa, xóa với icon và ẩn chữ ở màn hình nhỏ -->
                            <!-- <a type="button" class="btn btn-info btn-sm w-100" data-bs-toggle="modal"
                                data-bs-target="#viewEmployeeModal<%= customer._id %>">
                                <i class="fas fa-eye d-none d-sm-inline"></i>
                                <span class="d-none d-sm-inline">Xem</span>
                                <i class="fas fa-eye d-sm-none"></i>
                            </a> -->
                            <a href="customers/update/<%= customer.id %>" class="btn btn-warning btn-sm w-100"
                                data-id="<%= customer._id %>">
                                <i class="fas fa-edit d-none d-sm-inline"></i>
                                <span class="d-none d-sm-inline">Sửa</span>
                                <i class="fas fa-edit d-sm-none"></i>
                            </a>
                            <a href="customers/delete/<%= customer.id %>" class="btn btn-danger btn-sm w-100"
                                onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?');">
                                <i class="fas fa-trash-alt d-none d-sm-inline"></i>
                                <span class="d-none d-sm-inline">Xóa</span>
                                <i class="fas fa-trash-alt d-sm-none"></i>
                            </a>
                        </td>

                    </tr>
                    <% }) %>
                        <!-- Thêm khách tại đây -->
                    </div>
                    <!-- Thêm khách hàng  -->
                    <div class="modal fade" id="addCustomerModal" tabindex="-1" aria-labelledby="addCustomerModalLabel">
                        <div class="modal-dialog modal-dialog-scrollable modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="addCustomerModalLabel">Thêm khách hàng</h5>
                                </div>
                                <div class="modal-body">
                                    <form action="/customers/add" method="post">
                                        <div class="row mb-3 ">
                                            <div class="col-6">
                                                <strong class="m-2">Tên khách hàng</strong>
                                                <input type="text" class="form-control" name="name">
                                            </div>
                                            <div class="col-6">
                                                <strong class="m-2">Số điện thoại</strong>
                                                <input type="text" class="form-control" name="phone">
                                            </div>
                                        </div>
                                        <div class="row mb-3 ">
                                            <div class="col-6">
                                                <strong class="m-2">Email</strong>
                                                <input type="text" class="form-control" name="email">
                                            </div>
                                            <div class="col-6">
                                                <strong class="m-2">Giảm giá</strong>
                                                <input type="text" class="form-control" name="discount">
                                            </div>
                                        </div>
                                        <!-- Nút hành động -->
                                        <div class="text-end p-4">
                                            <button data-bs-dismiss="modal" class="btn btn-secondary">Hủy</button>
                                            <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
            </tbody>
        </table>

    </div>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>




    <!-- Script tìm kiếm và loc sản phẩm theo tên -->
    <script>
        document.getElementById('searchInput').addEventListener('input', function () {
            const searchValue = this.value.toLowerCase().trim(); // Loại bỏ khoảng trắng thừa
            const rows = document.querySelectorAll('#employeeTable tr');
    
            rows.forEach(row => {
                const name = row.querySelector('td:nth-child(2)')?.textContent.toLowerCase().trim(); // Cột Họ và Tên
    
                if (name === searchValue) {
                    row.style.display = ''; // Hiển thị hàng nếu tên trùng khớp
                } else {
                    row.style.display = 'none'; // Ẩn hàng nếu không trùng khớp
                }
            });
        });
    </script>

</body>

</html>